using System;
class Program
{
    static void Main()
    {
        int[] array = { 5, 4, 6, 7, 8, 9, 3, 5 };
        int minOddNumber = FindMinOddNumber(array);
        if (minOddNumber != int.MaxValue)
            Console.WriteLine("Найменше непарне число: " + minOddNumber);
        else
            Console.WriteLine("В масиві немає непарних чисел");
    }
    static int FindMinOddNumber(int[] array)
    {
        int minOddNumber = int.MaxValue;
        foreach (int number in array)
        {
            if (number % 2 != 0 && number < minOddNumber)
                minOddNumber = number;
        }
        return minOddNumber;
    }
}
