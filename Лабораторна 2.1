using System;

class Program
{
    static void Main()
    {
        Console.Write("Введіть число: ");
        int number = int.Parse(Console.ReadLine());

        if (number % 2 == 0)
        {
            Console.WriteLine("Введене число є парним.");
        }
        else
        {
            Console.WriteLine("Введене число не є парним.");
        }
    }
}
