using System;

class Program
{
    static void Main()
    {
        Console.Write("Введіть число: ");
        int number = int.Parse(Console.ReadLine());

        int reversedNumber = ReverseNumber(number);

        Console.WriteLine($"Перевернуте число: {reversedNumber}");
    }

    static int ReverseNumber(int number)
    {
        int reversedNumber = 0;

        while (number > 0)
        {
            int digit = number % 10; // Отримуємо останню цифру числа
            reversedNumber = reversedNumber * 10 + digit; // Додаємо цифру до перевернутого числа
            number /= 10; // Видаляємо останню цифру числа
        }

        return reversedNumber;
    }
}
